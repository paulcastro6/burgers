<div class="container text-center">
  <div class="hero">
    <h1>Eat Da Burger!</h1>
    <img src="./assets/images/burger.png" width="50%">
  </div>
  
</div>

<div class="row text-center">

  <div class="col-md-4">
    <div class="burger-box">
      <h3>Hot and fresh burgers!</h3>
      <div class="burger-list">
        <ol>
          {{#each burger}}
            {{#unless this.devoured}}
              <li class="burger">
                {{this.name}}

                <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit" class="btn btn-sm btn-success">Eat It!</button>
                </form>

                {{> burger/delete-burger}}
              </li>
            {{/unless}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="burger-box">
      <h3>Add a Burger</h3>
    <form class="create-update-form" action="burger/create" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured<br>
        <input type="radio" name="devoured" value="0"> Uneaten
      </div>

      <button type="submit" class="btn btn-sm btn-success">Add Burger</button>
    </form>
    </div>
  </div>

  <div class="col-md-4">
    <div class="burger-box">
      <h3>Burgers that have been devoured!</h3>
      <div class="burger-list">
        <ol>
          {{#each burger}}
            {{#if this.devoured}}
              <li class="burger">
                {{this.name}}

                <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button type="submit" class="btn btn-sm btn-success">Make Burger!</button>
                </form>

                {{> burger/delete-burger}}
              </li>
            {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>

</div>{{!-- /.row --}}